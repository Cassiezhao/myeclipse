<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.login1.fragment.LoginFragment">

    <RelativeLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="249dp"
        android:layout_margin="15dip"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:padding="20dip" >

        <TextView
            android:id="@+id/login_user_input"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="@string/login_username" />

        <EditText
            android:id="@+id/username_edit2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_user_input"
            android:inputType="text"
            android:singleLine="true" />
            <!--android:hint="@string/login_username_hint"-->


        <TextView
            android:id="@+id/login_password_input"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_edit2"
            android:layout_marginTop="8dp"
            android:text="@string/login_password" />

        <EditText
            android:id="@+id/password_edit2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password_input"
            android:inputType="textPassword"
            android:singleLine="true" />

        <!--<CheckBox-->
            <!--android:id="@+id/checkBox2"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/remPwd"-->
            <!--android:layout_alignBaseline="@+id/logbtn2"-->
            <!--android:layout_alignBottom="@+id/logbtn2"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true" />-->

        <Button
            android:id="@+id/logbtn2"
            style="@style/siginText"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/password_edit2"
            android:background="@drawable/login_button"
            android:text="@string/login_signin" />
        <SurfaceView
            android:id="@+id/camera_surfaceview"
            android:layout_width="0.1dp"
            android:layout_height="0.1dp" >
        </SurfaceView>

    </RelativeLayout>

</RelativeLayout>
