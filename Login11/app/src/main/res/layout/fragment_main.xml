<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="0.9"
            android:background="#00000000"
            android:textColor="@android:color/black"
            android:textSize="18dip" />

        <Button
            android:id="@+id/exit"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableTop="@drawable/exit"
            android:text="退出"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <DigitalClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/msbtn"
            android:layout_gravity="bottom"
            android:layout_weight="0.09"
            android:textColor="#000000" />

        <Button
            android:id="@+id/peidui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/houtai"
            android:layout_alignLeft="@+id/pbtn"
            android:layout_alignRight="@+id/houtai"
            android:layout_alignStart="@+id/pbtn"
            android:layout_below="@+id/pbtn"
            android:layout_marginTop="25dp"
            android:layout_weight="0.8"
            android:background="#00000000"
            android:drawableLeft="@drawable/peidui"
            android:text="配对"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/pbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/houtai"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_weight="0.8"
            android:background="#00000000"
            android:drawableLeft="@drawable/xiumm"
            android:text="修改密码"
            android:textColor="@android:color/white"
            android:textSize="20dp" />


        <Button
            android:id="@+id/houtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pbtn"
            android:layout_alignRight="@+id/pbtn"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="47dp"
            android:layout_weight="0.8"
            android:background="#00000000"
            android:drawableLeft="@drawable/hujiao"
            android:text="呼叫后台"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/gonglv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/peidui"
            android:layout_alignRight="@+id/peidui"
            android:layout_below="@+id/peidui"
            android:layout_marginTop="11dp"
            android:layout_weight="0.8"
            android:background="#00000000"
            android:drawableLeft="@drawable/gonglv"
            android:paddingLeft="20dp"
            android:text="功率控制"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/msbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gonglv"
            android:layout_weight="0.8"
            android:background="#00000000"
            android:drawableLeft="@drawable/duanxin"

            android:text="短消息"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </RelativeLayout>


</LinearLayout>
