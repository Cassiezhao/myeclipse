class Tank
{
	//表示坦克的横坐标
	int x = 0;
	//表示坦克的纵坐标
	int y = 0;
	
	public Tank (int x,int y) 
	{
		this.x = x;
		this.y = y;
	}

	public int getX() {
		return x;
	}

	public void setX(int x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}

	public void setY(int y) {
		this.y = y;
	}	
	
}
//我的坦克
class Hero extends Tank
{
	public Hero( int x,int y) 
	{
		super(x, y);
	}
}