package com.cassie.tankegame2;

public class Shot implements Runnable{
	int x;
	int y;
	int direct;
	public Shot(int x, int y,int direct) {
		
		this.x = x;
		this.y = y;
		this.direct = direct;
	}
	@Override
	public void run() {
		// TODO Auto-generated method stub
		while (true) {
			switch (direct) {
			case 0:
				   	//子弹向上
					y -=  ;
					break;
			case 1:
					break;
			case 2:
					break;
			case 3:
					break;
			
			}
			
		}
	}
	
}

